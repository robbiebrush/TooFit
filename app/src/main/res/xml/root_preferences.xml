<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/personal_header">

            <EditTextPreference
                app:key="name"
                app:title="Name"
                app:defaultValue=""
                app:useSimpleSummaryProvider="true" />

            <EditTextPreference
                app:key="email"
                app:title="Email"
                app:defaultValue=""
                app:useSimpleSummaryProvider="true" />

            <EditTextPreference
                app:key="number"
                app:title="Phone Number"
                app:defaultValue=""
                app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
    </PreferenceScreen>
